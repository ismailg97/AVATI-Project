@using AVATI.Data

@inject IBasicDataService _basicDataService
@inject NavigationManager _navigationManager


<div class="modal @(_show ? "fade show" : "" )" id="myModal" style=" display: @(_show ? "block" : "none");">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Löschvorgang bestätigen</h4>
                <button type="button" class="close" data-dismiss="modal" @onclick="Showing">&times;</button>
            </div>
            <div class="modal-body">
                Sind Sie sicher, dass der Soft Skill @SoftSkill gelöscht werden soll?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="Delete">Ok</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Showing">Close</button>
            </div>
        </div>
    </div>
</div>
@if (_show)
{
    <div class="modal-backdrop fade show"></div>
}


@code {

    [Parameter]
    public string SoftSkill { get; set; }

    private bool _show = false;

    private void Delete()
    {
        _basicDataService.DeleteSoftSkill(SoftSkill);
        Showing();
        _navigationManager.NavigateTo(_navigationManager.Uri, true);
    }

    public void Showing()
    {
        _show = !_show;
        StateHasChanged();
    }

}
