@page "/Projektübersicht/ProjectDetailedView"
@page "/Projektübersicht/ProjectDetailedView/{ID:int}"
@using AVATI.Data
@inject IProjectActivityService _activity
@inject IProjektService _projectService

<div class="container">
    <div class="row">
        <div class="col-sm-6 mb-4 align-content-center">
            <div class="card mb-4 border-dark" style="width: auto; background-color: #138496">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">@_project.Projecttitel</h4>
                    <label class="text text-xl-center">@_project.Projectdescription</label>
                </div>
            </div>
            <div class="card mb-4 border-dark " style="width: auto">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">Mitarbeiter</h4>
                    <table class="table table-hover">
                        <thead style="background-color: #86cfda;">
                        <tr>
                            <th scope="col">Vorname</th>
                            <th scope="col">Nachname</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (!_project.Employees.Any())
                        {
                            <tr>
                                <td>[Kein Mitarbeiter vorhanden]</td>
                            </tr>
                        }
                        @foreach (var emp in _project.Employees)
                        {
                            <tr>
                                <td>@emp.FirstName</td>
                                <td>@emp.LastName</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-4 border-dark " style="width: auto">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">Projekttätigkeiten</h4>
                    <table class="table table-hover">
                        <thead style="background-color: #86cfda;">
                        <tr>
                            <th scope="col">Tätigkeit</th>
                            <th scope="col">Vorname</th>
                            <th scope="col">Nachname</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (!_project.ProjectActivities.Any())
                        {
                            <tr>
                                <td>[Keine Tätigkeiten vorhanden]</td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        @foreach (var field in _project.ProjectActivities)
                        {
                            <tr>
                                <td>@field.Description</td>
                                @if (_project.Employees.Find(x => x.EmployeeID == field.EmployeeID) == null)
                                {
                                    <td>[Kein zugewiesener Mitarbeiter]</td>
                                    <td></td>
                                }
                                else
                                {
                                    <td>@_project.Employees.Find(x => x.EmployeeID == field.EmployeeID).FirstName</td>
                                    <td>@_project.Employees.Find(x => x.EmployeeID == field.EmployeeID).LastName</td>
                                }
                            </tr>
                        }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div class="col-sm-6 mb-4 align-content-center">
            <div class="card mb-4 border-dark" style="width:auto;">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">Branchen</h4>
                                        <table class="table table-hover text-center">
                                            <thead style="background-color: #86cfda;">
                                            <tr>
                                                <th scope="col">Branchentitel</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @if (!_project.Fields.Any())
                                            {
                                                <tr>
                                                    <td>[Keine Branchen dem Projekt zugewiesen]</td>
                                                    <td></td>
                                                </tr>
                                            }
                                            @foreach (var field in _project.Fields)
                                            {
                                                <tr>
                                                    <td>@field</td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                </div>
            </div>
            <div class="card mb-4 border-dark" style="width: auto;">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">Projektlaufzeit</h4>
                    <table class="table border-dark">
                        <thead style="background-color: #86cfda;">
                        <tr>
                            <th scope="col" class="text-center">Projektanfang</th>
                            <th scope="col" class="text-center">Projektende</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="text-center">@_project.Projectbeginning.ToString("dd.MM.yy")</td>
                            <td class="text-center">@_project.Projectend.ToString("dd.MM.yy")</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card mb-4 border-dark" style="width:auto;">
                <div class="card-body">
                    <h4 class="card-title text-xl-center">Projektzwecke</h4>
                    <table class="table table-hover text-center">
                        <thead style="background-color: #86cfda;">
                        <tr>
                            <th scope="col">Zweck</th>
                            <th scope="col">Lösung durch folgende Tätigkeit</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (!_project.Projectpurpose.Any())
                        {
                            <tr>
                                <td>[Keine Projektzwecke vorhanden]</td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <a href="/Projektübersicht" class="sm form-label">
            <button type="button" class="btn btn-success">
                <span class="oi oi-document" aria-hidden="true"></span> Zurück zur Übersicht
            </button>
        </a>
    </div>
</div>


@code {

    [Parameter]
    public int ID { get; set; }

    public Project _project { get; set; }

    protected override void OnInitialized()
    {
        _project = _projectService.GetProject(ID);
        _project.ProjectActivities = _activity.GetProjectActivitiesProject(ID);
    }

}