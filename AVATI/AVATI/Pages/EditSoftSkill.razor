@using AVATI.Data

@inject IBasicDataService _basicDataService
@inject NavigationManager _navigationManager


<div class="modal @(_show ? "fade show" : "" )" id="myModal" style=" display: @(_show ? "block" : "none");">
               <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title">Verändere ein Softskill</h4>
                      <button type="button" class="close" data-dismiss="modal" @onclick="Showing">&times;</button>
                    </div>
                    <div class="modal-body">
                      <input type="text" id="softskill" @bind="NewSoftskill" />
                      </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary" @onclick="Update">Save</button>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Showing">Close</button>
                      </div>
                  </div>
              </div>
          </div>
@if (_show)
{
  <div class="modal-backdrop fade show"></div>
}


@code {

  [Parameter]
  public string OldSoftSkill { get; set; }

  private bool _show = false;

  private string NewSoftskill { get; set; } 

  private void Update()
  {
    _basicDataService.UpdateSoftSkill(NewSoftskill, OldSoftSkill);
    Showing();
    _navigationManager.NavigateTo(_navigationManager.Uri, true);
  }

  public void Showing()
  {
    _show = !_show;
    StateHasChanged();
  }
}