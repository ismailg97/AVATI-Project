@using AVATI.Data
@using AVATI.Data.EmployeeDetailFiles
@using DocumentFormat.OpenXml.Drawing

@inject IProposalService _proposal
@inject IEmployeeService _employeeService
@inject IEmployeeDetailService _employeeDetailService

@if (ShowEdit)
{
    if (EmployeeDet != null)
    {
        <div class="modal fade show d-block" data-bs-backdrop="static" id="exampleModal" role="dialog">
            <div class="modal-dialog" style="min-width: 1500px" role="document">
                <div class="modal-content bg-light text-black">
                    <div class="modal-header">
                        <h5 class="modal-title font-weight-bolder text-center" id="titleLabel">Detailansicht</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick=@Close>
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container ml-3" style="min-width: 100%">
                            <div class="row justify-content-md-center">
                                <div class="card col-sm-4 text-black border-dark">
                                    <img src="https://www.geniale-tipps.de/images/t/whatsapp-profilbild-grau.jpg" class="card-img-top" alt=""/>
                                    <div class="card-body pb-3 pt-3">
                                        <h5 class="card-title">@_employeeService.GetEmployeeProfile(EmpId).FirstName @_employeeService.GetEmployeeProfile(EmpId).LastName</h5>
                                        <div class="card-title text-left">
                                            Rate Card Level:
                                            @if (EmployeeDet.Rc != 0)
                                            {
                                                <button class="btn btn-sm btn-outline-success" @onclick=@(() => { _employeeDetailService.DeleteRc(Detail); })>@_employeeDetailService.GetEmployeeDetail(EmpId, PropId).Rc</button>
                                                                                                                                                                                                                 
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-dark" @onclick=@(() => {_employeeDetailService.AddRc(Detail, _employeeService.GetEmployeeProfile(EmpId).Rc);})>@_employeeDetailService.GetEmployeeDetail(EmpId, PropId).Rc</button>
                                            }
                                        </div>
                                        <div class="card-text text-left">
                                            Branchen:
                                            @foreach (var field in EmployeeDet.Field)
                                                {
                                                    if (Detail.Fields.Contains(field))
                                                    {
                                                        <button class="btn btn-sm btn-outline-success mb-1 mr-1" @onclick=@(() => {_employeeDetailService.DeleteField(Detail, field);})>@field</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-dark mb-1 mr-1" @onclick=@(() => {_employeeDetailService.AddField(Detail, field);})>@field</button>
                                                    }
                                                }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                <div class="row mb-2">
                                    <div class="card col-sm-8 border-secondary ml-2 mr-2" style="min-height: 221.883px">
                                        <div class="card-header text-left bg-transparent border-secondary">Hardskills</div>
                                        <div class="card-body text-left">
                                            @foreach (var hardSkill in EmployeeDet.Hardskills)
                                            {
                                                if (Detail.Hardskills.Contains(hardSkill))
                                                {
                                                    <button class="btn btn-sm btn-outline-success mb-1 mr-1" @onclick=@(() => {_employeeDetailService.DeleteHard(Detail, hardSkill);})>@hardSkill.Description</button>    
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-dark mb-1 mr-1" @onclick=@(() => {_employeeDetailService.AddHard(Detail, hardSkill);})>@hardSkill.Description</button>
                                                }
                                                
                                            }
                                        </div>
                                    </div>
                                    <div class="card col-sm-3 border-secondary">
                                        <div class="card-header text-left bg-transparent border-secondary">Sprache(n)</div>
                                        <div class="card-body text-left">
                                            @foreach (var lang in EmployeeDet.Language)
                                            {
                                                if (Detail.Languages.Contains(lang))
                                                {
                                                    <button class="btn btn-sm btn-outline-success mb-1 mr-1" @onclick=@(() => {_employeeDetailService.DeleteLang(Detail, lang);})>@lang.Item1 @lang.Item2</button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-dark mb-1 mr-1" @onclick=@(() => {_employeeDetailService.AddLang(Detail, lang);})>@lang.Item1 @lang.Item2</button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                    <div class="row mt-2">
                                        <div class="card border-secondary col-sm-8 ml-2 mr-2" style="min-height: 221.883px">
                                            <div class="card-header text-left bg-transparent border-secondary">Softskills</div>
                                            <div class="card-body text-left">
                                                @foreach (var softSkill in EmployeeDet.Softskills)
                                                {
                                                    if (Detail.Softskills.Contains(softSkill))
                                                    {
                                                        <button class="btn btn-sm btn-outline-success mb-1 mr-1" @onclick=@(() => {_employeeDetailService.DeleteSoft(Detail, softSkill);})>@softSkill</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-dark mb-1 mr-1" @onclick=@(() => {_employeeDetailService.AddSoft(Detail, softSkill);})>@softSkill</button>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <div class="card border-secondary col-sm-3">
                                            <div class="card-header text-left bg-transparent border-secondary">Rolle(n)</div>
                                            <div class="card-body text-left">
                                                @foreach (var role in EmployeeDet.Roles)
                                                {
                                                    if (Detail.Roles.Contains(role))
                                                    {
                                                        <button class="btn btn-sm btn-outline-success mb-1 mr-1" @onclick=@(() => {_employeeDetailService.DeleteRole(Detail, role);})>@role</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-dark mb-1 mr-1" @onclick=@(() => {_employeeDetailService.AddRole(Detail, role);})>@role</button>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer mt-5">
                        <button class="btn btn-danger" @onclick="@Close">Abbrechen</button>
                        <button class="btn btn-success" @onclick=@(() => { _employeeDetailService.UpdateEmployeeDetail(EmpId, PropId, Detail); Close();})>Änderungen speichern</button> <!--TODO: make work-->
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        Console.WriteLine("Couldn't find employee");
    }
}

@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}

@code {

    [Parameter]
    public int EmpId { get; set; }
    [Parameter]
    public ProposalOverview Abstract { get; set; }
    public int PropId { get; set; }
    public Data.EmployeeDetailFiles.EmployeeDetail Detail;
    public Data.Employee EmployeeDet;
    public bool ShowEdit { get; set; }
    public bool ShowBackdrop { get; private set; }

    public void Show(int employeeId, int proposalId)
    {
        ShowEdit = !ShowEdit;
        ShowBackdrop = !ShowBackdrop;
        EmpId = employeeId;
        PropId = proposalId;
        Detail = _employeeDetailService.GetEmployeeDetail(EmpId, PropId);
        EmployeeDet = _employeeService.Employees.First();
        Console.WriteLine(EmpId.ToString() + PropId.ToString());
        StateHasChanged();
    }

    private void Close()
    {
        ShowEdit = !ShowEdit;
        ShowBackdrop = !ShowBackdrop;
        StateHasChanged();
    }

    private void _copyDetail(Data.EmployeeDetailFiles.EmployeeDetail source, Data.EmployeeDetailFiles.EmployeeDetail target)
    {
        target.EmployeeId = source.EmployeeId;
        target.ProposalId = source.ProposalId;
        target.Rc = source.Rc;
        target.Softskills = new List<string>(source.Softskills);
        target.Hardskills = new List<Hardskill>(source.Hardskills);
        target.Fields = new List<string>(source.Fields);
        target.Roles = new List<string>(source.Roles);
        target.Languages = new List<Tuple<string, LanguageLevel>>(source.Languages);
    }
}