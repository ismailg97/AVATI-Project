

@if (ShowEdit)
{
    <div class="modal fade show d-block" data-bs-backdrop="static" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content bg-light border font-weight-bold text-black">
                <div class="modal-header">
                    <h5 class="modal-title font-weight-bolder" id="titleLabel">Detailansicht</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick=@Close>
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body text-left">
                    <p>Hier könnten die Mitarbeiterdetails zu finden sein</p>
                </div>
            </div>
        </div>
    </div>
}

@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}



@code {
    
    [Parameter]
    public int  empId { get; set; }

    public int  propId { get; set; }
    
    public bool ShowEdit { get; set; }
    public bool ShowBackdrop { get; private set; }
    public void Show(int empId, int propId)
    {
        ShowEdit = !ShowEdit;
        ShowBackdrop = !ShowBackdrop;
        StateHasChanged();

    }

    private void Close()
    {
        ShowEdit = !ShowEdit;
        ShowBackdrop = !ShowBackdrop;
        StateHasChanged();
    }
}